@model IEnumerable<Teacher>

@{
    ViewData["Title"] = "Teacher";
}

<br />
<h2>List of teachers</h2>
<hr />

@* Den går till createstudent view *@
<a class="btn btn-primary" asp-controller="Teacher" asp-action="CreateTeacher">Create new teacher</a>


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Teacher" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info"    asp-controller="Teacher" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-controller="Teacher" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>