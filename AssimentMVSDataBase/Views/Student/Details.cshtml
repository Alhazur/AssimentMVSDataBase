@model Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h4>Student's info</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dd class="col-sm-10">

        </dd>
    </dl>
</div>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Students Courses</th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var item in Model.StudentsCourses)
        {
            <tr>

                <td>@item.Course.Title</td>
            </tr>
            <tr>
                <th scope="col">Assignments</th>
            </tr>

            @foreach (var value in item.Course.Assignments)
            {
                <tr>

                    <td>@value.Title</td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-danger" asp-action="Index">Back to List</a>
</div>
