@model Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Student</h1>

<form asp-controller="Student" asp-action="Edit">
    <div class="col-12">
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>
                <input asp-for="Name" />
            </dd>
            <dt>Phone</dt>
            <dd>
                <input asp-for="Phone" />
            </dd>
            <dt>City</dt>
            <dd>
                <input asp-for="Location" />
            </dd>
            <dt>
                <button class="btn btn-success" asp-controller="Student" asp-action="Edit">
                    Save
                </button>
            </dt>
            <dd>
                <button class="btn btn-secondary" asp-controller="Student" asp-action="Index">
                    Back
                </button>
            </dd>
        </dl>
    </div>
</form>
