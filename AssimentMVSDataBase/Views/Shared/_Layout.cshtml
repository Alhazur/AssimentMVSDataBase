                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index">Person list</a>
                    </li>
                </ul>

            </div>

        </nav>

    </header>
    <div>
        @RenderBody()
    </div>
    <footer>
        <p>Made by: Alhazur &copy; @DateTime.Now.ToString("yyyy")</p>
    </footer>
