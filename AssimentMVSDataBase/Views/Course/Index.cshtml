@model IEnumerable<AssimentMVSDataBase.Models.Course>
@*@model List<Course>*@

@{
    ViewData["Title"] = "Course";
}

<br />
<h2>List of courses</h2>
<hr />

@* Den går till createstudent view *@
<a class="btn btn-primary" asp-controller="Course" asp-action="CreateCourse">Create new courses</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Course" asp-action="Edit" asp-route-id="@item.CourseId">Edit</a>
                    <a class="btn btn-info"    asp-controller="Course" asp-action="Details" asp-route-id="@item.CourseId">Details</a>
                    <a class="btn btn-danger"  asp-controller="Course" asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>