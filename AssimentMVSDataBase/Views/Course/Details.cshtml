@model CourseViewModel

@{
    ViewData["Title"] = "Details";
}

<br />
<h1>Details</h1>
<h2>Courses info</h2>
<hr />

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th class="col-2">Title</th>
            <th class="col-2">Description</th>
            <th class="col-2">Teacher</th>
            <th class="col-3">Students</th>
            <th class="col-3">Options</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(model => model.course.Title)</td>
            <td>@Html.DisplayFor(model => model.course.Description)</td>
            <td>@Html.DisplayFor(model => model.course.Teacher.Name)</td>
            <td>
                @*@foreach (var item in Model.course.StudentsCourses)
                {
                    @Html.DisplayFor(modelItem => item.Student.Name)
                }*@
            </td>

        <td>
            <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@Model.course.CourseId">Edit</a>
            <a class="btn btn-danger" asp-action="Index">Back to List</a>
        </td>

    </tr>
</tbody>
</table>